{% extends 'base.html.twig' %}

{% block title %}Détail du livre {{ livre.titre }}{% endblock %}

{% block body %}
  
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-4">
            <div class="text-center">
                <h2 class="mb-4">Détail du livre</h2>
                <img src="{{ livre.image }}" class="img-fluid rounded" alt="Image de livre">
            </div>
        </div>
        <div class="col-lg-8" style="margin-top : 90px">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">{{ livre.titre|e }}</h3>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">ISBN : {{ livre.ISBN }}</li>
                        <li class="list-group-item">Prix : {{ livre.prix|e }} €</li>
                        <li class="list-group-item">Editeur : {{ livre.editedAt|date('d/m/Y') }}</li>
                    </ul>
                    <div class="mt-3">
                        <h5 class="card-subtitle mb-2 text-muted">Résumé :</h5>
                        <p class="card-text">{{ livre.resumer }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
